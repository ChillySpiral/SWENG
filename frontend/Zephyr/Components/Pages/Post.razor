@using Zephyr.Components.Controls.Feed
@page "/post/{PostId}"
@if (IsLoading)
{
    <p>Loading ...</p>
}
else
{
    <PostItem Data="_postViewModel" Style="width: 800px; height: 800px; margin-left:auto; margin-right:auto;"></PostItem>
    <CommentInput OnPosted="OnPosted" PostId="_postId"></CommentInput>
    @foreach (var comment in _comments)
    {
        <Comment Data="comment"></Comment>
    }
}